+    else if( n >= 0.5 ) // 0.5 yields an angle >= 60 deg. (6 or fewer sides)
+        csides = 6;
+    else
+        csides = M_PI * 2.0 / acos( 1.0 - n ) + 1;
+
+    if( csides < 6 )
