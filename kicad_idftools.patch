+int VRML_LAYER::calcNSides( double aRadius, double aAngle )
+{
+    // check #segments on ends of arc
+    int maxSeg = maxArcSeg * aAngle / M_PI;
+
+    if( maxSeg < 3 )
+        maxSeg = 3;
+
+    int csides = aRadius * M_PI / minSegLength;
+
+    if( csides < 0 )
+        csides = -csides;
+
+    if( csides > maxSeg )
+    {
+        if( csides < 2 * maxSeg )
+            csides /= 2;
+        else
+            csides = (((double) csides) * minSegLength / maxSegLength );
+    }
+
+    if( csides < 3 )
+        csides = 3;
+
+    if( (csides & 1) == 0 )
+        csides += 1;
+
+    return csides;
