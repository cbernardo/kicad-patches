+    bool   bottom;
+    IDF3::IDF_LAYER lyr;
+
+    std::map< std::string, VRML_IDS*> cmap;  // map colors by outline UID
+    VRML_IDS* vcp;
+
+    while( sc != ec )
+    {
+        sc->second->GetPosition( vX, vY, vA, lyr );
+
+        if( lyr == IDF3::LYR_BOTTOM )
+            bottom = true;
+        else
