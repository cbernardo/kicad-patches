+        return NULL;
+    }
+
+    if( refdes.compare( aDrilledHole->GetDrillRefDes() ) )
+    {
+        ERROR;
+        cerr << "\n*BUG: pushing an incorrect REFDES ('" << aDrilledHole->GetDrillRefDes();
+        cerr << "') to component ('" << refdes << "')\n";
+        return NULL;
+    }
+
+    drills.push_back( aDrilledHole );
+
+    return aDrilledHole;
