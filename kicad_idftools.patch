+bool IDF3_BOARD::DelComponent( size_t aIndex )
+{
+    if( aIndex >= components.size() )
+    {
+        ERROR << "index (" << aIndex << ") >= components size ("
+            << components.size() << ")\n";
+            return false;
+    }
+
+    std::map<std::string, IDF3_COMPONENT*>::iterator it = components.begin();
+
+    while( aIndex-- > 0 ) ++it;
