+        isComment = true;
+        aLine.erase( aLine.begin() );
+
+        while( !aLine.empty() && isspace( *aLine.rbegin() ) )
+            aLine.erase( --aLine.end() );
+
+        return true;
+    }
+
+    while( !aLine.empty() && isspace( *aLine.begin() ) )
+        aLine.erase( aLine.begin() );
+
+    while( !aLine.empty() && isspace( *aLine.rbegin() ) )
+        aLine.erase( --aLine.end() );
